{
    "compilerOptions": {
        "allowJs": false,
        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "checkJs": false,
        "composite": true,
        "incremental": true,
        "declaration": true,
        "declarationDir": "./build",
        "declarationMap": true,
        "downlevelIteration": false,
        "emitDeclarationOnly": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": false,
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "lib": ["esnext", "dom"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "newLine": "LF",
        "noEmit": false,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "outDir": "./build",
        "rootDir": "./src",
        "removeComments": true,
        "sourceMap": true,
        "stripInternal": true,
        "strict": true,
        "target": "ESNext",
        "tsBuildInfoFile": "../tsconfig.test.tsbuildinfo",
        "useUnknownInCatchVariables": false,
        "types": ["mocha", "chai", "node"]
    },
    "exclude": ["../src/*", "../src/**/*", "../src/**/**/*"],
    "include": [
        "../@OneObjectInterfaces.d.ts",
        "./src/*.ts",
        "./src/**/*.ts",
        "../lib/*.ts",
        "../lib/**/*.ts",
        "../lib/**/**/*.ts"
    ]
}
