{
    "compilerOptions": {
        "allowJs": false,
        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "checkJs": false,
        "composite": true,
        "incremental": true,
        "declaration": true,
        "declarationDir": "./",
        "declarationMap": false,
        "downlevelIteration": false,
        "emitDeclarationOnly": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": false,
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "lib": ["esnext"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "newLine": "LF",
        "noEmit": false,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "outDir": ".",
        "removeComments": true,
        "sourceMap": true,
        "stripInternal": true,
        "strict": true,
        "target": "ESNext",
        "tsBuildInfoFile": "../tsconfig.scripts.tsbuildinfo",
        "useUnknownInCatchVariables": false,
        "types": ["node"]
    },
    "exclude": ["../src/**/*", "../lib/**/*"],
    "include": ["./*.ts"]
}
