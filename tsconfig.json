{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": "./node-runtime/lib",
    "rootDir": "./node-runtime",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@refinio/one.core/*": ["./packages/one.core/lib/*"],
      "@refinio/one.models/*": ["./packages/one.models/lib/*"]
    }
  },
  "include": ["node-runtime/**/*.ts"],
  "exclude": ["node_modules", "lib", "node-runtime/lib", "node-runtime/node_modules_resolved", "packages"]
}
